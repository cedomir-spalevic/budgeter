{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react-native",
      "target": "es2017",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "noEmit": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true,
      "noImplicitAny": false,
      "baseUrl": "./src",
      "paths": {}
   },
   "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
   ]
}
